{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "..",
    "types": ["bun-types"],
    "jsx": "react-jsx"
  },
  "include": ["src", "../daemon"]
}
